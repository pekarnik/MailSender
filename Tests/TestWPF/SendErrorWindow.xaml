<Window x:Class="TestWPF.SendErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="SendErrorWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lSendEnd" Content="Произошла ошибка!"  FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" 
                FontFamily="Arial"   >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFC0BA" Offset="0.013"/>
                    <GradientStop Color="#FFDF5739" Offset="0.41800001263618469"/>
                    <GradientStop Color="#FFD41300" Offset="0.418"/>
                    <GradientStop Color="#FF690A0A" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

        <Button Content="OK" HorizontalAlignment="Left" Margin="634,349,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_Close"/>
    </Grid>
</Window>
